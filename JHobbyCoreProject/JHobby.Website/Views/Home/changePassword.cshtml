<script>
    Vue.createApp({
        data() {
            return {
                updateMember: {
                    newpassword: "",
                    passwordtwo: "",
                    oldpassword: "",
                },
            }
        },

        methods: {
            changePassword() {
                // if ((this.updateMember.oldpassword != ))
                // {
                // 	return alert("原先密碼錯誤");
                // }
                // if ((this.updateMember.oldpassword == this.updateMember.password)) {
