                // }
                // if ((this.updateMember.password != this.updateMember.passwordtwo)) {
                // 	return alert("新的密碼與新密碼再次確認欄位必須一樣");
                // }


                let self = this;
                //alert(123);

                fetch(`/MemberApi/UpdateMember/10`, {
                    method: "PUT",
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(this.updateMember)

                })
                    // .then(r => r.json())
                    .then(r => {
                        if (!r.ok) {
                            throw new Error('Fail');
                        }
                        return r.json();
                    })
                    .then(d => {
                        console.log('Success', d);                       //true和false會回傳至此
                        //alert(JSON.stringify(this.updateMember));
                        if (d == true) {
                            alert("密碼修改成功~~");
                            window.location.href = '/Home/changePassword';
                        }
                        else {
                            alert("修改密碼失敗,請重新確認三個欄位輸入是否正確");
                            self.updateMember.newpassword = "";
                            self.updateMember.passwordtwo = "";
                            self.updateMember.oldpassword = "";
                        }
                    })
                    .catch(e => {
                        console.log('Fail', e);
                        alert("修改密碼失敗,請重新嘗試");
                    });
            },
        },
    }).mount("#app");
</script>



