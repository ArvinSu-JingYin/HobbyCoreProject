<script src="https://unpkg.com/vue@3/dist/vue.global.js"></script>
<script>
    const app = Vue.createApp({
        data() {
            return {
                ProfileSetting: {
                    headShot:"",
                    status:"",
                    memberId: "",
                    memberName: "",
                    nickName: "",
                    gender: "",
                    identityCard: "",
                    birthday: "",
                    acitveCity: "",
                    activeArea: "",
                    address: "",
                    phone: "",
                    personalProfile: ""
                }
            };
        },
        mounted() {
            let self = this;

            // 使用 fetch API 來取得 API 的回應
            fetch("/api/ProfileSetting/GetById/1")
                .then(r => r.json())
                .then(d => {
                    self.ProfileSetting = d;
                    // alert(JSON.stringify(d));
                }); // 注意這裡是 d[0]
        }
    }).mount("#app");
</script>