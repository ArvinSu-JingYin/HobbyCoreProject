@section Styles {
    <style>
        .RegisterLogo {
            max-width: 150px;
            height: auto;
        }
    </style>
}

<!-- Main Wrapper -->
<div id="app" class="main-wrapper authendication-pages">
    <!-- Page Content -->
    <div class="content">
        <div class="container wrapper no-padding">
            <div class="row no-margin vph-100">
                <div class="col-12 col-sm-12 col-md-12 col-lg-12 no-padding">
                    <div class="dull-pg">
                        <div class="row no-margin vph-100 d-flex align-items-center justify-content-center">
                            <div class="col-sm-10 col-md-10 col-lg-10 mx-auto">
                                <header class="text-center">
                                    <img src="~/images/register/Hobby.png" class="RegisterLogo" alt="HobbyLogo">
                                </header>
                                <div class="shadow-card">
                                    <h2>註冊畫面</h2>
                                    <div class="tab-content" id="myTabContent">
                                        <div class="tab-pane fade show active" id="user" role="tabpanel" aria-labelledby="user-tab">
                                            <!-- Register Form -->
                                            <form action="login.html">
                                                @*  <div class="form-group">
                                                <div class="group-img">
                                                <i class="feather-user"></i>
                                                <input type="text" class="form-control" placeholder="使用者名稱">
                                                </div>
                                                </div> *@
                                                <div class="form-group">
                                                    <div class="group-img">
                                                        <i class="feather-mail"></i>
                                                        <input type="text" class="form-control" placeholder="電子郵件" v-model="memberRegister.account">
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <div class="pass-group group-img">
                                                        <i class="toggle-password feather-eye-off"></i>
                                                        <input type="password" class="form-control pass-input" placeholder="密碼" v-model="memberRegister.password">
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <div class="pass-group group-img">
                                                        <i class="toggle-password-confirm feather-eye-off"></i>
                                                        <input type="password" class="form-control pass-confirm" placeholder="密碼確認">
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <input type="text" class="form-control pass-confirm" placeholder="身份别" v-model="memberRegister.status" hidden>
                                                </div>
                                                <div class="form-group">
                                                    <input type="text" class="form-control pass-confirm" placeholder="建立日期" v-model="memberRegister.creationDate" hidden>
                                                </div>
                                                <div class="form-check d-flex justify-content-start align-items-center policy">
                                                    <div class="d-inline-block">
                                                        <input class="form-check-input" type="checkbox" value="" id="policy">
                                                    </div>
                                                    <label class="form-check-label" for="policy">我已閱讀並同意<a href="XXXXX">《使用條款》</a>與<a href="XXXXX">《隱私權政策》</a></label>
                                                </div>
                                                <button class="btn btn-secondary register-btn d-inline-flex justify-content-center align-items-center w-100 btn-block" @@click="Registe()" type="button">建立帳號<i class="feather-arrow-right-circle ms-2"></i></button>
                                                <div class="form-group">
                                                    <div class="login-options text-center">
                                                        <span class="text">或使用以下帳號登入</span>
                                                    </div>
                                                </div>
                                                <div class="form-group mb-0">
                                                    <ul class="social-login d-flex justify-content-center align-items-center">
                                                        <li class="text-center">
                                                            <button type="button" class="btn btn-social d-flex align-items-center justify-content-center">
                                                                <img src="~/assets/img/icons/google.svg" class="img-fluid" alt="Google">
                                                                <span>Google</span>
                                                            </button>
                                                        </li>
                                                        <li class="text-center">
                                                            <button type="button" class="btn btn-social d-flex align-items-center justify-content-center">
                                                                <img src="~/assets/img/icons/facebook.svg" class="img-fluid" alt="Facebook">
                                                                <span>Facebook</span>
                                                            </button>
                                                        </li>
                                                    </ul>
                                                </div>
                                            </form>
                                            <!-- /Register Form -->
                                        </div>
                                    </div>
                                </div>
                                <div class="bottom-text text-center">
                                    <p>已擁有帳號？ <a href="Login">登入</a></p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- /Page Content -->
</div>
<!-- /Main Wrapper -->

<script src="https://unpkg.com/vue@3/dist/vue.global.js"></script>
<script>
    Vue.createApp({
        data() {
            return {
                memberRegister: {
                    account: "",
                    password: "",
                    status: "0",
                    creationDate: "2023-11-17"
                },
            }
        },

        methods: {
            Registe() {
                let self = this;

                fetch("/MemberApi/InsertRegister", {
                    method: "POST",
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(this.memberRegister)
                })
                    .then(r => r.json())
                    .then(d => {
                        console.log('Success', d);
                        alert("註冊成功");
                    })
            },
        },
    }).mount("#app");
</script>